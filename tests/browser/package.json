{
  "name": "auction-system-browser-tests",
  "version": "1.0.0",
  "description": "Browser-based end-to-end tests for the auction system using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:headless": "jest --testPathPattern=browser",
    "test:headed": "HEADED=true jest --testPathPattern=browser",
    "test:debug": "HEADED=true SLOWMO=100 jest --testPathPattern=browser --runInBand"
  },
  "dependencies": {
    "@playwright/test": "^1.49.0",
    "playwright": "^1.49.0",
    "jest": "^30.1.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.0.0"
  },
  "jest": {
    "testTimeout": 30000,
    "testPathIgnorePatterns": ["/node_modules/"],
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "glob": "^11.0.0",
    "inflight": "npm:@isaacs/inflight@^1.0.1"
  }
}