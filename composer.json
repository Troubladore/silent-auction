{
    "name": "auction-system/silent-auction",
    "description": "Silent Auction Management System",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "AuctionSystem\\": "classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AuctionSystem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    }
}